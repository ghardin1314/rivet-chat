{
  "name": "@rivetchat/core",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "auth:generate": "npx @better-auth/cli@latest generate --output src/schema/auth.ts -y",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "0.31.5"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "better-auth": "catalog:",
    "drizzle-orm": "0.44.5",
    "nanoid": "5.1.6",
    "pg": "^8.16.3",
    "postgres": "3.4.7",
    "rivetkit": "catalog:"
  }
}
